<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19.3dp"
        android:layout_marginTop="10.7dp"
        android:layout_marginRight="12.1dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="5.8dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="  "
                android:background="@color/purple_500"/>
            <LinearLayout android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <info.androidhive.fontawesome.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_car_alt_solid"
                    android:textColor="@color/purple_500"
                    android:padding="5dp"
                    android:textSize="20sp"
                    app:solid_icon="true" />
                <TextView
                    android:textSize="20dp"
                    android:textColor="#323643"
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5.3dp"
                    android:text="Job Title"
                    android:fontFamily="@font/coresans_cr_medium"/>
            </LinearLayout>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <info.androidhive.fontawesome.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_tachometer_alt_solid"
                    android:textColor="@color/purple_500"
                    android:padding="5dp"
                    android:textSize="20sp"
                    app:solid_icon="true" />
                <TextView
                    android:textSize="13dp"
                    android:textColor="#323643"
                    android:id="@+id/speed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5.3dp"
                    android:layout_marginTop="5dp"
                    android:text="Designation"
                    android:fontFamily="@font/coresans_cr_regular"/>
                </LinearLayout>
                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <info.androidhive.fontawesome.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_hourglass_half_solid"
                    android:textColor="@color/purple_500"
                    android:padding="5dp"
                    android:textSize="20sp"
                    app:solid_icon="true" />
                <TextView
                    android:textSize="10.3sp"
                    android:textStyle="italic"
                    android:textColor="#323643"
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5.3dp"
                    android:layout_marginTop="5dp"
                    android:text="Published On"
                    android:fontFamily="@font/coresans_cr_regular"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
